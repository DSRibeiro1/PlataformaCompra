<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlataformaCompra.MainPage"
             BackgroundColor="#E6F0FF"
             >
    <!-- Definindo o fundo azul claro -->

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <!-- Seu conteúdo aqui -->
            <Label
                Text="Digite produto"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Digite nome do produto que deseja comprar" />
            <Entry
                x:Name="campoSimbolo"
                MaxLength="10"
                Text=""/>
            <Button
                x:Name="BuscarInformacoes"
                Text="Ok" 
                SemanticProperties.Hint="Busca Informação"
                Clicked="CliqueBuscarInformacoes"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
